<%- include('../partials/header') %>
<section class="row justify-content-center">
  <div class="col-md-6">
    <h1 class="h4 mb-3">Reset your password</h1>
    <p class="text-muted">
      Enter your email and we'll generate a reset link. A debug link will be shown on-screen since this is a demo.
    </p>
    <form action="/forgot-password" method="POST" class="card card-body shadow-sm">
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" name="email" required />
      </div>
      <button class="btn btn-primary" type="submit">Send reset link</button>
    </form>
  </div>
</section>
<%- include('../partials/footer') %>
