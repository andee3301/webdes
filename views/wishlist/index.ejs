<%- include('../partials/header') %>
<section>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h1 class="h4 mb-0">My wishlist</h1>
      <p class="text-muted mb-0">Save coffees to revisit later.</p>
    </div>
  </div>

  <% if (!items.length) { %>
  <div class="alert alert-light border">No items saved yet.</div>
  <% } else { %>
  <div class="row g-3">
    <% items.forEach((entry) => { const item = entry.menuItem; %>
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <% if (item?.imageUrl) { %>
        <img src="<%= item.imageUrl %>" class="card-img-top" alt="<%= item.name %>" />
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= item?.name %></h5>
          <p class="card-text text-muted"><%= item?.description %></p>
          <p class="fw-bold">$<%= parseFloat(item?.price || 0).toFixed(2) %></p>
          <div class="d-flex gap-2">
            <a class="btn btn-link p-0" href="/menu/<%= item?.id %>">View item</a>
            <form action="/wishlist/<%= item?.id %>/remove" method="POST">
              <button class="btn btn-sm btn-outline-secondary" type="submit">Remove</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } %>
</section>
<%- include('../partials/footer') %>
