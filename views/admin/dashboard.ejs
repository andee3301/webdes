<%- include('../partials/header') %>
<section class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h1 class="h4 mb-1">Admin dashboard</h1>
      <p class="text-muted mb-0">Quick snapshot of orders and customers.</p>
    </div>
    <div class="d-flex gap-2">
      <a class="btn btn-outline-primary" href="/admin/orders">Orders</a>
      <a class="btn btn-primary" href="/admin/menu-items">Manage menu</a>
    </div>
  </div>
</section>

<div class="row g-3">
  <div class="col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <p class="text-muted mb-1">Orders today</p>
        <h3 class="mb-0"><%= ordersToday %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <p class="text-muted mb-1">Revenue today</p>
        <h3 class="mb-0">$<%= Number(revenueToday).toFixed(2) %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <p class="text-muted mb-1">Total users</p>
        <h3 class="mb-0"><%= userCount %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <p class="text-muted mb-1">Orders by status</p>
        <div class="small">
          <% Object.keys(statusCounts).forEach((key) => { %>
          <div class="d-flex justify-content-between">
            <span class="text-uppercase"><%= key %></span>
            <strong><%= statusCounts[key] %></strong>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
